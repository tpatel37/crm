<h1>Customer List</h1>

<!-- Navigation Links -->
<nav>
  <a href="<%= customers_path %>">All Customers</a> |
  <a href="<%= customers_path(filter: 'missing_email') %>">Missing Email</a> |
  <a href="<%= customers_path(filter: 'alphabetized') %>">Alphabetized</a>
</nav>



<div style="display: flex; flex-wrap: wrap; gap: 20px;">
  <% @customers.each do |customer| %>
    <div style="border: 1px solid #ddd; padding: 15px; border-radius: 8px; width: 250px; text-align: center; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);">
      <h2 style="font-size: 18px; margin-bottom: 10px;"><%= customer.full_name %></h2>
      <p style="margin: 5px 0;"><strong>Phone:</strong> <%= customer.phone_number %></p>
      <p style="margin: 5px 0;"><strong>Email:</strong> <%= customer.email.present? ? customer.email : "No Email" %></p>
      
      <% if customer.image.attached? %>
        <img src="<%= url_for(customer.image) %>" alt="Customer Image" style="width: 100px; height: 100px; border-radius: 5px; margin-top: 10px;">
      <% else %>
        <p style="margin-top: 10px; color: gray;">No Image Available</p>
      <% end %>
    </div>
  <% end %>
</div>
